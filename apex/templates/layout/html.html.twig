{#
/**
 * @file
 * Apex Theme - HTML template.
 *
 * Variables:
 * - logged_in: Boolean for authenticated user status.
 * - root_path: Root path of the current page (e.g., node, admin, user).
 * - node_type: Content type machine name for the current page.
 * - head_title: Page title for the <title> element.
 * - page_top: Markup for page_top region.
 * - page: Page-level render array.
 * - page_bottom: Markup for page_bottom region.
 * - db_offline: Boolean for database offline status.
 * - placeholder_token: Token for lazy builders.
 *
 * @see template_preprocess_html()
 */
#}
{%
  set body_classes = [
    logged_in ? 'user-logged-in',
    not root_path ? 'path-frontpage' : 'path-' ~ root_path|clean_class,
    node_type ? 'page-node-type-' ~ node_type|clean_class,
    db_offline ? 'db-offline',
    apex_demo ? 'apex-demo--' ~ apex_demo,
    apex_dark_mode ? 'apex-dark-mode-enabled',
    apex_rtl ? 'apex-rtl',
  ]
%}
<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes.addClass(body_classes) }}>
    {#
      Visually hidden link to main content for accessibility.
    #}
    <a href="#main-content" class="visually-hidden focusable skip-link">
      {{ 'Skip to main content'|t }}
    </a>

    {# Preloader #}
    {% if apex_preloader %}
    <div class="apex-preloader" aria-hidden="true">
      <div class="apex-preloader__spinner">
        <div class="apex-preloader__bounce1"></div>
        <div class="apex-preloader__bounce2"></div>
        <div class="apex-preloader__bounce3"></div>
      </div>
    </div>
    {% endif %}

    {{ page_top }}
    {{ page }}
    {{ page_bottom }}

    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
