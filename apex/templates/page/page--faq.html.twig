{#
/**
 * @file
 * Apex Theme - FAQ page template.
 */
#}

<div class="apex-page-header">
  <div class="apex-container">
    <h1 class="apex-page-header__title">{{ 'FAQ'|t }}</h1>
    <p class="apex-page-header__subtitle">{{ 'Find answers to the most commonly asked questions.'|t }}</p>
  </div>
</div>

{% if page.breadcrumb %}
<div class="apex-breadcrumb-region">
  <div class="apex-container">{{ page.breadcrumb }}</div>
</div>
{% endif %}

<main id="main-content" class="apex-main">
  {% if page.highlighted %}
  <div class="apex-container">{{ page.highlighted }}</div>
  {% endif %}

  <div class="apex-container">
    <div class="apex-layout {{ page.sidebar_second ? 'layout--sidebar-second' : 'layout--no-sidebar' }}">

      <div class="apex-content">
        {# FAQ search #}
        <div class="apex-faq-search" data-apex-animate="fade-up">
          <form class="apex-faq-search__form">
            <input type="search" class="apex-form__input apex-form__input--lg"
                   placeholder="{{ 'Search FAQ...'|t }}" aria-label="{{ 'Search FAQ'|t }}" />
          </form>
        </div>

        {{ page.content }}
      </div>

      {% if page.sidebar_second %}
      <aside class="apex-sidebar apex-sidebar--second" role="complementary">
        {{ page.sidebar_second }}
      </aside>
      {% endif %}

    </div>
  </div>

  {# Contact CTA #}
  {% if page.content_bottom %}
  <section class="apex-section apex-section--primary">
    {{ page.content_bottom }}
  </section>
  {% endif %}
</main>
