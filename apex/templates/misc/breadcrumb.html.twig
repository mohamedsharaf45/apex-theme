{#
/**
 * @file
 * Apex Theme - Breadcrumb template.
 *
 * @see template_preprocess_breadcrumb()
 */
#}
{% if breadcrumb %}
<nav class="apex-breadcrumb" role="navigation" aria-label="{{ 'Breadcrumb'|t }}">
  <ol class="apex-breadcrumb__list" itemscope itemtype="https://schema.org/BreadcrumbList">
    {% for item in breadcrumb %}
    <li class="apex-breadcrumb__item {{ loop.last ? 'apex-breadcrumb__item--active' }}"
        itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
      {% if item.url %}
        <a href="{{ item.url }}" class="apex-breadcrumb__link" itemprop="item">
          <span itemprop="name">{{ item.text }}</span>
        </a>
      {% else %}
        <span class="apex-breadcrumb__current" itemprop="name">{{ item.text }}</span>
      {% endif %}
      <meta itemprop="position" content="{{ loop.index }}" />
    </li>
    {% endfor %}
  </ol>
</nav>
{% endif %}
