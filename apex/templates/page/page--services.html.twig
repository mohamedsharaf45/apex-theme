{#
/**
 * @file
 * Apex Theme - Services page template.
 */
#}

{# Page Header #}
<div class="apex-page-header apex-page-header--primary">
  <div class="apex-container">
    <h1 class="apex-page-header__title">{{ 'Our Services'|t }}</h1>
    <p class="apex-page-header__subtitle">{{ 'Comprehensive solutions tailored to your business needs.'|t }}</p>
  </div>
</div>

{% if page.breadcrumb %}
<div class="apex-breadcrumb-region">
  <div class="apex-container">{{ page.breadcrumb }}</div>
</div>
{% endif %}

<main id="main-content" class="apex-main">
  {% if page.highlighted %}
  <div class="apex-container">{{ page.highlighted }}</div>
  {% endif %}

  {% if page.content_top %}
  <section class="apex-section">{{ page.content_top }}</section>
  {% endif %}

  <div class="apex-container">
    {{ page.content }}
  </div>

  {% if page.content_bottom %}
  <section class="apex-section">{{ page.content_bottom }}</section>
  {% endif %}
</main>
