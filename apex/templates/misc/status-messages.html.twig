{#
/**
 * @file
 * Apex Theme - Status messages template.
 *
 * @see template_preprocess_status_messages()
 */
#}
<div data-drupal-messages>
  {% block messages %}
  {% for type, messages in message_list %}
    {%
      set classes = [
        'messages',
        'messages--' ~ type,
        'apex-message',
        'apex-message--' ~ type,
      ]
    %}

    <div role="{{ type == 'error' ? 'alert' : 'status' }}"{{ attributes.addClass(classes) }}>
      <div class="apex-message__icon">
        {% if type == 'status' %}
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        {% elseif type == 'warning' %}
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
            <line x1="12" y1="9" x2="12" y2="13"></line>
            <line x1="12" y1="17" x2="12.01" y2="17"></line>
          </svg>
        {% elseif type == 'error' %}
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="15" y1="9" x2="9" y2="15"></line>
            <line x1="9" y1="9" x2="15" y2="15"></line>
          </svg>
        {% endif %}
      </div>

      <div class="apex-message__content">
        {% if messages|length > 1 %}
          <ul class="messages__list">
            {% for message in messages %}
              <li>{{ message }}</li>
            {% endfor %}
          </ul>
        {% else %}
          {{ messages|first }}
        {% endif %}
      </div>

      <button type="button" class="apex-message__close" aria-label="{{ 'Close'|t }}">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
  {% endfor %}
  {% endblock messages %}
</div>
