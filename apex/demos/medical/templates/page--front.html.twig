{#
/**
 * @file
 * Apex Medical Demo - Front page template.
 *
 * Healthcare landing page with:
 * - Emergency contact bar
 * - Hero with appointment CTA
 * - Department/services cards
 * - Doctor profiles
 * - Patient testimonials
 * - Health tips blog
 * - Insurance partners
 * - CTA / appointment booking
 */
#}

{# Emergency Contact Bar #}
<div class="apex-emergency-bar" role="alert">
  <div class="apex-container">
    <div class="apex-emergency-bar__content">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>
      </svg>
      <span>{{ 'Emergency:'|t }} <a href="tel:+1234567890"><strong>{{ '(123) 456-7890'|t }}</strong></a></span>
      <span class="apex-emergency-bar__separator">|</span>
      <span>{{ 'Hours: Mon-Fri 8AM-6PM, Sat 9AM-1PM'|t }}</span>
    </div>
  </div>
</div>

{# Hero Section #}
{% if page.hero %}
<section class="apex-section apex-section--hero apex-section--no-padding">
  {{ page.hero }}
</section>
{% else %}
<section class="apex-hero apex-hero--medium apex-hero--medical">
  <div class="apex-hero__background" style="background: linear-gradient(135deg, #0f766e 0%, #0d9488 50%, #14b8a6 100%);">
    <div class="apex-hero__overlay"></div>
  </div>
  <div class="apex-container">
    <div class="apex-hero__grid apex-hero__grid--split">
      <div class="apex-hero__content" data-apex-animate="fade-right">
        <span class="apex-hero__label">{{ 'Caring for Your Health'|t }}</span>
        <h1 class="apex-hero__title">{{ 'Quality Healthcare'|t }}<br>{{ 'You Can Trust'|t }}</h1>
        <p class="apex-hero__subtitle">{{ 'Our experienced team of medical professionals is dedicated to providing compassionate, personalized care for you and your family.'|t }}</p>
        <div class="apex-hero__actions">
          <a href="/appointment" class="apex-btn apex-btn--white apex-btn--lg">{{ 'Book Appointment'|t }}</a>
          <a href="/departments" class="apex-btn apex-btn--outline-light apex-btn--lg">{{ 'Our Departments'|t }}</a>
        </div>
      </div>
      <div class="apex-hero__media" data-apex-animate="fade-left">
        {# Doctor/clinic image placeholder #}
      </div>
    </div>
  </div>
</section>
{% endif %}

{# Quick Info Cards #}
<section class="apex-section apex-section--overlap" data-apex-animate="fade-up">
  <div class="apex-container">
    {% if page.highlighted %}
      {{ page.highlighted }}
    {% else %}
      <div class="apex-info-cards" data-apex-stagger>
        <div class="apex-info-card">
          <div class="apex-info-card__icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/>
            </svg>
          </div>
          <h3 class="apex-info-card__title">{{ 'Working Hours'|t }}</h3>
          <p>{{ 'Mon-Fri: 8AM - 6PM'|t }}<br>{{ 'Sat: 9AM - 1PM'|t }}</p>
        </div>
        <div class="apex-info-card">
          <div class="apex-info-card__icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/>
            </svg>
          </div>
          <h3 class="apex-info-card__title">{{ 'Our Location'|t }}</h3>
          <p>{{ '123 Medical Center Dr.'|t }}<br>{{ 'Suite 100, City, ST 12345'|t }}</p>
        </div>
        <div class="apex-info-card apex-info-card--highlight">
          <div class="apex-info-card__icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
          </div>
          <h3 class="apex-info-card__title">{{ 'Book Online'|t }}</h3>
          <p>{{ 'Schedule your visit easily through our online portal.'|t }}</p>
          <a href="/appointment" class="apex-btn apex-btn--sm">{{ 'Book Now'|t }}</a>
        </div>
      </div>
    {% endif %}
  </div>
</section>

{# Departments Section #}
{% if page.content_top %}
<section class="apex-section">
  <div class="apex-container">
    <div class="apex-section__header apex-text-center" data-apex-animate="fade-up">
      <span class="apex-section__label">{{ 'What We Offer'|t }}</span>
      <h2 class="apex-section__title">{{ 'Our Departments'|t }}</h2>
      <p class="apex-section__subtitle">{{ 'Comprehensive care across multiple specialties.'|t }}</p>
    </div>
    {{ page.content_top }}
  </div>
</section>
{% endif %}

{# Main Content / Doctors #}
{% if page.content %}
<section class="apex-section apex-section--alt">
  <div class="apex-container">
    <div class="apex-section__header apex-text-center" data-apex-animate="fade-up">
      <span class="apex-section__label">{{ 'Meet Our Team'|t }}</span>
      <h2 class="apex-section__title">{{ 'Our Specialists'|t }}</h2>
    </div>
    {{ page.content }}
  </div>
</section>
{% endif %}

{# Testimonials #}
{% if page.content_bottom %}
<section class="apex-section">
  <div class="apex-container">
    <div class="apex-section__header apex-text-center" data-apex-animate="fade-up">
      <span class="apex-section__label">{{ 'Testimonials'|t }}</span>
      <h2 class="apex-section__title">{{ 'What Our Patients Say'|t }}</h2>
    </div>
    {{ page.content_bottom }}
  </div>
</section>
{% endif %}

{# CTA - Appointment #}
<section class="apex-section apex-section--primary" data-apex-animate="fade-up">
  <div class="apex-container apex-text-center">
    <h2 class="apex-section__title">{{ 'Your Health, Our Priority'|t }}</h2>
    <p class="apex-section__subtitle">{{ 'Schedule your appointment today and take the first step towards better health.'|t }}</p>
    <div class="apex-hero__actions">
      <a href="/appointment" class="apex-btn apex-btn--white apex-btn--lg">{{ 'Book an Appointment'|t }}</a>
      <a href="tel:+1234567890" class="apex-btn apex-btn--outline-light apex-btn--lg">{{ 'Call Us'|t }}</a>
    </div>
  </div>
</section>
